<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.adintech.smartparking">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.AppConstants"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RegisterLogin.SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterLogin.RecoverAccountActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".RegisterLogin.VerifiedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".RegisterLogin.StepperWizardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".RegisterLogin.ResetPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".common.BookingDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.UpiDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.AboutMeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.profile.PersonalDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NormalUser.NearByAreaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OwnerUser.AreaHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NormalUser.UserHistoryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OwnerUser.MainOwnerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NormalUser.MainNormalActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!-- for no stacking due to notification -->
        <activity
            android:name=".NormalUser.BookParkingAreaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OwnerUser.AddPositionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NormalUser.GPSMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterLogin.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".RegisterLogin.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".RegisterLogin.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />

        <!-- Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <!-- Notification receiver -->
        <receiver
            android:name=".utils.notifications.NotificationReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver android:name=".utils.notifications.NotificationActionReceiver" />

        <!-- Home Screen Widget Start -->
        <receiver
            android:name=".utils.widgets.ParkingOwnerUserWidget"
            android:label="Smart Parking (Owner User)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/parking_owner_user_widget_info" />
        </receiver>
        <receiver
            android:name=".utils.widgets.ParkingNormalUserWidget"
            android:label="Smart Parking (Normal User)">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/parking_normal_user_widget_info" />
        </receiver>
        <!-- Home Screen Widget End -->

        <!-- Background service Start -->
        <service
            android:name=".utils.services.MyParkingService"
            android:foregroundServiceType="dataSync" />
    </application>

</manifest>